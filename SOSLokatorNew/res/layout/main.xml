<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/layout_main_textview_location_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onTextViewLocationStatusClick"
            android:text="@string/nodata"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>

        <TextView
            android:id="@+id/layout_main_textview_location_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/nodata" >
        </TextView>

        <TextView
            android:id="@+id/layout_main_textview_location_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="@string/nodata" >
        </TextView>
    </LinearLayout>

    <com.google.android.maps.MapView
        android:id="@+id/layout_main_mapview"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:apiKey="0V0x5NJTz8Zu2nazUNUJoYZfw7gxWuFRJ-y9Dzg"
        android:clickable="true"
        android:enabled="true" />

</LinearLayout>